generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model projects {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt  DateTime  @default(now()) @db.Date
  imageUrl   String
  name       String
  websiteUrl String
  categories String[]  // âœ… multiple categories stored as array of strings
}

model video {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  videoId String
}
